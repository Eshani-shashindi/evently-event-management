<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Booking Servlets -->
    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>com.booking.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/BookingView</url-pattern>
    </servlet-mapping>  

    <servlet>
        <servlet-name>CreateBookingServlet</servlet-name>
        <servlet-class>com.booking.CreateBookingServlet</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>CreateBookingServlet</servlet-name>
        <url-pattern>/CreateBooking</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateBookingServlet</servlet-name>
        <servlet-class>com.booking.UpdateBookingServlet</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>UpdateBookingServlet</servlet-name>
        <url-pattern>/updateBooking</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBookingServlet</servlet-name>
        <servlet-class>com.booking.DeleteBookingServlet</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>DeleteBookingServlet</servlet-name>
        <url-pattern>/deleteBooking</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.booking.loginservlet</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Feedback Servlets -->
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>feedback_package.EditServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>EditServlet2</servlet-name>
        <servlet-class>com.feedback_package.EditServlet2</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewServlet</servlet-name>
        <servlet-class>com.feedback_package.ViewServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.feedback_package.DeleteServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SaveServlet</servlet-name>
        <servlet-class>com.feedback_package.SaveServlet</servlet-class>
    </servlet>

    <!-- Feedback Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/editFeedback</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>EditServlet2</servlet-name>
        <url-pattern>/editFeedback2</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ViewServlet</servlet-name>
        <url-pattern>/viewFeedback</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/deleteFeedback</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SaveServlet</servlet-name>
        <url-pattern>/saveFeedback</url-pattern>
    </servlet-mapping>

    <!-- JDBC Context Params -->
    <context-param>
        <param-name>jdbcURL</param-name>
        <param-value>jdbc:mysql://127.0.0.1:3306/evently</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcUsername</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcPassword</param-name>
        <param-value>abc1234</param-value>
    </context-param>

    <!-- Admin and Staff Servlets -->
    <servlet>
        <servlet-name>adminlogin</servlet-name>
        <servlet-class>com.admin.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminlogin</servlet-name>
        <url-pattern>/log</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addstaff</servlet-name>
        <servlet-class>com.staff.AddStaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addstaff</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateadmin</servlet-name>
        <servlet-class>com.admin.UpdateAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateadmin</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteadmin</servlet-name>
        <servlet-class>com.admin.DeleteAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteadmin</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>viewstaff</servlet-name>
        <servlet-class>com.admin.ViewStaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewstaff</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deletestaff</servlet-name>
        <servlet-class>com.staff.DeleteStaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deletestaff</servlet-name>
        <url-pattern>/deletestf</url-pattern>
    </servlet-mapping>

    <!-- âœ… Set home.jsp as the main welcome page -->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>        <!-- First page -->
        <welcome-file>index.jsp</welcome-file>       <!-- fallback -->
        <welcome-file>indexfeedback.jsp</welcome-file> <!-- fallback -->
    </welcome-file-list>

</web-app>
